if(USE_QNNPACK)
  if(QNNPACK_PATH STREQUAL "")
    set(QNNPACK_PATH ${CMAKE_CURRENT_SOURCE_DIR}/QNNPACK)
  endif()
	set(PTHREAD_POOL_PATH ${QNNPACK_PATH}/deps/pthreadpool)
  file(GLOB QNNPACK_CONTRIB_SRC src/contrib/QNNPACK/*.cc)
  list(APPEND RUNTIME_SRCS ${QNNPACK_CONTRIB_SRC})
	include_directories(${QNNPACK_PATH}/include)
	include_directories(${PTHREAD_POOL_PATH}/include)
  find_library(QNNPACK_CONTRIB_LIB qnnpack PATHS ${QNNPACK_PATH}/lib ${QNNPACK_PATH})

  find_library(QNNPACK_PTHREAD_CONTRIB_LIB pthreadpool PATHS ${QNNPACK_PATH}/lib ${QNNPACK_PATH})
  find_library(QNNPACK_CPUINFO_CONTRIB_LIB cpuinfo ${QNNPACK_PATH}/lib)
  find_library(QNNPACK_CLOG_CONTRIB_LIB clog ${QNNPACK_PATH}/lib)
  list(APPEND TVM_RUNTIME_LINKER_LIBS ${QNNPACK_CONTRIB_LIB})
  list(APPEND TVM_RUNTIME_LINKER_LIBS ${QNNPACK_PTHREAD_CONTRIB_LIB})
  list(APPEND TVM_RUNTIME_LINKER_LIBS ${QNNPACK_CPUINFO_CONTRIB_LIB})
  list(APPEND TVM_RUNTIME_LINKER_LIBS ${QNNPACK_CLOG_CONTRIB_LIB})
endif(USE_QNNPACK)
